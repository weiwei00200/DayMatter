<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_date_btn"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relative_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="@color/date_item_line" />

            <TextView
                android:id="@+id/year"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/laohuangli"
                android:textColor="@color/top_days"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@color/date_item_line" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/uc_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>

            <com.pybeta.ui.widget.UcDateItem
                android:id="@+id/UcDateItem_Saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.pybeta.ui.widget.UcDateItem>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/UcDateItem_Second"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/UcDateItem_Second_Chinese_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/UcDateItem_Second_Number"
            android:layout_alignRight="@+id/UcDateItem_Second_Number"
            android:paddingTop="10dp"
            android:textColor="@color/top_days"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/UcDateItem_Second_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/top_days"
            android:textSize="80sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/date_item_line" />
    </RelativeLayout>

    <View
        android:id="@+id/yi_ji_top_line"
        android:layout_width="fill_parent"
        android:layout_height="0.7dp"
        android:background="@color/date_item_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_yi_ji_btn"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/yi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/image_should"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ico_yi" />

            <TextView
                android:id="@+id/tv_should_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/image_should"
                android:ellipsize="end" />
        </RelativeLayout>

        <View
            android:id="@+id/ucdate_yiji_line"
            android:layout_width="0.7dp"
            android:layout_height="fill_parent"
            android:background="@color/date_item_line" />

        <RelativeLayout
            android:id="@+id/ji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/image_avoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ico_ji" />

            <TextView
                android:id="@+id/tv_avoid_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/image_avoid"
                 android:gravity="center_vertical"
                android:ellipsize="end" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.7dp"
        android:background="@color/date_item_line" />

    <RelativeLayout
        android:id="@+id/chong"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/image_chong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ico_chong" />

        <TextView
            android:id="@+id/tv_chong_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/image_chong"
             android:gravity="center_vertical"
            android:ellipsize="end" />
    </RelativeLayout>

</LinearLayout>