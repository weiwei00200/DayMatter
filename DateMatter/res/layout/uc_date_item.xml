<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/date_item_weekday" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/date_border_weekday_left"
                android:layout_width="0.7dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/date_item_line" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="@color/date_item_line" />

            <TextView
                android:id="@+id/date_border_weekday_right"
                android:layout_width="0.7dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/date_item_line" />
        </RelativeLayout>

        <TextView
            android:id="@+id/date_weekday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.7dp"
            android:layout_marginRight="0.7dp"
            android:layout_marginTop="0.7dp"
            android:background="@color/date_item_weekday"
            android:gravity="center"
            android:textColor="@color/no_matter" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/date_border_bottom"
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@color/date_item_line" />

            <TextView
                android:id="@+id/date_border_top"
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:background="@color/date_item_line" />

            <TextView
                android:id="@+id/date_border_left"
                android:layout_width="0.7dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/date_item_line" />

            <TextView
                android:id="@+id/date_border_right"
                android:layout_width="0.7dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@color/date_item_line" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.7dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/date_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textColor="@color/no_matter" />

            <TextView
                android:id="@+id/date_chinese_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/date_item_chinese_number" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>